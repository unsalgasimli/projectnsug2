<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <Button
        android:id="@+id/btnPickImage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Pick Image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btnPickAudio"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Pick Music"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/btnPickImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btnRecordVoice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Record Voice"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/btnPickAudio"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btnSendTextNote"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Send Text Note"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/btnRecordVoice"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btnSendNudge"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Send Nudge"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/btnSendTextNote"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
